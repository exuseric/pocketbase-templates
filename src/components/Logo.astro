---
const { logo, collection, siteName, classes } = Astro.props;
import Image from "astro/components/Image.astro";
import { getImageUrl } from "../pb";
---

<a
    href="/"
    class="flex flex-row gap-1 items-center text-md w-max font-semibold"
>
    {
        logo !== "" && (
            <Image
                class={`${classes}`}
                id="logo_image"
                style="max-width:100%;height:auto;object-position:center;object-fit:contain;transition: max-width 0.3s ease;"
                src={getImageUrl({
                    collection: collection,
                    filename: logo,
                })}
                loading="eager"
                decoding="sync"
                alt={siteName}
                widths={[240, 400, 600, 800, 1000]}
                sizes={`(max-width: 360px) 240px, (max-width: 500px) 400px, (max-width: 768px) 600px, (max-width: 1024px) 800px, 1000px`}
                inferSize
            />
        )
    }
    <!-- <span class="font-bold text-sm">{siteName}</span> -->
</a>
