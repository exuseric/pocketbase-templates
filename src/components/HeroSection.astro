---
import { Image, getImage } from "astro:assets";
import { getImageUrl } from "../pb";
import { Icon } from "astro-icon/components";
import Vertical from "./hero/Vertical.astro";
import Horizontal from "./hero/Horizontal.astro";
import HorizontalStylised from "./hero/HorizontalStylised.astro";
const { hero, values } = Astro.props;

console.log(hero)
---

{hero.version.toLocaleLowerCase().trim() === "vertical" && (
    <Vertical hero={hero} values={values}/>
)}

{hero.version.toLocaleLowerCase().trim() === "horizontal" && (
    <Horizontal hero={hero} values={values}/>
)}

{hero.version.toLocaleLowerCase().trim() === "horizontal stylised" && (
    <HorizontalStylised hero={hero} values={values}/>
)}