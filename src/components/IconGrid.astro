---
import { Icon } from "astro-icon/components";

const { cards } = Astro.props;
---

<div
  class="py-8 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl lg:py-8"
>
  <div class="grid row-gap-8 justify-center sm:row-gap-0 sm:grid-cols-2 lg:grid-cols-3">
    {
      cards &&
        cards.map((card, idx) => (
          <div class={`p-8 ${idx <= 2 && 'border-b'} ${idx !== 2 && 'sm:border-r'}`}>
            <div class="max-w-md text-center">
              <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-primary-lighter text-white sm:w-16 sm:h-16">
                <Icon name="mdi:star" aria-hidden="true" focusable="false" class="w-8 h-8 text-current sm:w-12 sm:h-12"/>
              </div>
              <h3 class="mb-2 font-semibold leading-5">{card.title}</h3>
              {card.body && <slot set:html={card.body} />}
            </div>
          </div>
        ))
    }
  </div>
</div>
