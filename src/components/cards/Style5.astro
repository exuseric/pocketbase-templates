---
import CustomImage from "../CustomImage.astro";

const { cards, highlight, page } = Astro.props;
---

<div class="mt-8">
  <div class="grid gap-6 row-gap-5 md:grid-cols-2 lg:grid-cols-3">
    {
      //@ts-ignore
      cards &&
        cards.map((card) => (
          <article class=" bg-neutral-50 text-black overflow-hidden p-1 rounded-xl grid grid-cols-12 grid-rows-12 gap-0 h-72">
            {card.image && (
              <CustomImage
                image={card?.expand?.image}
                classes={`object-cover object-center row-[1/-1] col-[1/-1] w-full h-full rounded-lg`}
                lazy={true}
              />
            )}
            <div class="p-2 bg-neutral-50 row-[-5/-2] col-[2/-2] h-full flex items-center justify-center">
              <h3 class="text-lg font-bold leading-none sm:text-xl">
                {card.title}
              </h3>
              {card.body && <slot set:html={card.body} />}
            </div>
          </article>
        ))
    }
  </div>
</div>
